<AnchorPane id="AnchorPane" prefHeight="350.0" prefWidth="460.0" stylesheets="@../../../StyleSheet.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="timetrackingexam.gui.controller.ProjectsOverviewController">
