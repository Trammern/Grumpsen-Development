      <JFXComboBox fx:id="cbbProjectSelect" focusColor="#405aa8" layoutX="14.0" layoutY="46.0" onAction="#setItemsOnList" prefHeight="25.0" prefWidth="190.0" promptText="Project X" style="-fx-background-color: #6ea3ff;" stylesheets="@../../../StyleSheet.css" unFocusColor="BLACK" AnchorPane.leftAnchor="10.0" />
      <JFXListView fx:id="lstTaskList" layoutX="10.0" layoutY="92.0" onMouseClicked="#setCurrentTask" prefHeight="209.0" prefWidth="190.0" AnchorPane.bottomAnchor="39.0" AnchorPane.leftAnchor="10.0" />

