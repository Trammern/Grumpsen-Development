      <JFXButton fx:id="btnAddTask" layoutX="10.0" layoutY="318.0" onAction="#addTask" prefHeight="25.0" prefWidth="72.0" stylesheets="@../../../StyleSheet.css" text="Add Task" />
      <JFXButton layoutX="364.0" layoutY="293.0" onAction="#OpenTask" prefHeight="36.0" prefWidth="80.0" text="Open Task" />
      <Label fx:id="txtSlectedTask" layoutX="353.0" layoutY="55.0" prefHeight="17.0" prefWidth="98.0" text="None" textFill="WHITE" wrapText="true" AnchorPane.bottomAnchor="278.0" AnchorPane.topAnchor="55.0" />
