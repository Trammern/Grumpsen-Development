      <Label layoutX="210.0" layoutY="55.0" text="Currently selected task:" textFill="WHITE" AnchorPane.bottomAnchor="278.0" AnchorPane.topAnchor="55.0">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <JFXButton fx:id="btnEditTask" layoutX="85.0" layoutY="318.0" onAction="#handleEditTask" text="Edit Task" />
      <JFXButton fx:id="btnDeleteTask" layoutX="151.0" layoutY="318.0" onAction="#handleDeleteTask" prefHeight="25.0" prefWidth="51.0" text="Delete" />

     

   </children>
